<!DOCTYPE html>
<html>
<head>
  <title>AhoyAndDevise</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
		<% if user_signed_in? %>
			<h3>Hello, <%= current_user.name %></h3>
			<h3 class="right"><%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %></h3>
		<% end %>
	</div>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
